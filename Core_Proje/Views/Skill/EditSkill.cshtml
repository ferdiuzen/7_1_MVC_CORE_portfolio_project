@model EntityLayer.Concrete.Skill
@{
    ViewData["Title"] = "EditSkill";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="card-header border-0">
    <h3 class="mb-0"> Yetenek Güncelleme Sayfası </h3>
</div>

@*Aşağıdaki BeginForm Tag inde ilk bölüm aksiyon, ikinci bölüm tablo ,üçüncü bölüm method tanımlamasıdır*@

@using(Html.BeginForm("EditSkill","Skill",FormMethod.Post)){

    @Html.HiddenFor(x => x.SkillID )
    <br />
    @Html.Label("Yetenek Başlığı")
    @Html.TextBoxFor(x=>x.Title,new{@class="form-control"})
    <br />
    @Html.Label("Değer")
    @Html.TextBoxFor(x=>x.Value,new{@class="form-control"})
    <br />
    <button class="btn btn-success"> Güncelle</button>

}