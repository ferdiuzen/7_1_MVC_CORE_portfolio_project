@using EntityLayer.Concrete
@model List<Message>

<div class="col-md-6" data-aos="fade-left" data-aos-delay="300">
    <div class="mt-3 px-1">

    

      
        <div class="h5">İletişim Kanallarım!</div>
        <p>Benimle çalışmak için bana aşağıdaki bilgilerimden ulaşabilirsiniz </p>
        <p>Bana mail veya mesaj gönderebilirsiniz</p>
        <p>Görüşmek üzere!</p>
    </div>
    @foreach (var item in Model)
    {
    <div class="mt-53 px-1">
        <div class="row">
            <div class="col-sm-2">
                <div class="pb-1">Email:</div>
            </div>
            <div class="col-sm-10">
                <div class="pb-1 fw-bolder">@item.Mail</div>
            </div>
            <div class="col-sm-2">
                <div class="pb-1">Skype:</div>
            </div>
            <div class="col-sm-10">
                <div class="pb-1 fw-bolder">username@skype.com</div>
            </div>
            <div class="col-sm-2">
                <div class="pb-1">Phone:</div>
            </div>
            <div class="col-sm-10">
                <div class="pb-1 fw-bolder"> 123456789</div>
            </div>
        </div>
    </div>
        }
</div>